<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.navercorp.com/lucy-xss-servlet">
   <defenders>
       <!-- XssPreventer 등록 -->
       <defender>
           <name>xssPreventerDefender</name>
           <class>com.navercorp.lucy.security.xss.servletfilter.defender.XssPreventerDefender</class>
       </defender>

       <!-- XssSaxFilter 등록 -->
       <defender>
           <name>xssSaxFilterDefender</name>
           <class>com.navercorp.lucy.security.xss.servletfilter.defender.XssSaxFilterDefender</class>
           <init-param>
               <param-value>lucy-xss-sax.xml</param-value>   <!-- lucy-xss-filter의 sax용 설정파일 -->
               <param-value>false</param-value>        <!-- 필터링된 코멘트를 남길지 여부, 성능 효율상 false 추천 -->
           </init-param>
       </defender>

       <!-- XssFilter 등록 -->
       <defender>
           <name>xssFilterDefender</name>
           <class>com.navercorp.lucy.security.xss.servletfilter.defender.XssFilterDefender</class>
           <init-param>
               <param-value>lucy-xss.xml</param-value>    <!-- lucy-xss-filter의 dom용 설정파일 -->
               <param-value>false</param-value>         <!-- 필터링된 코멘트를 남길지 여부, 성능 효율상 false 추천 -->
           </init-param>
       </defender>
   </defenders>

    <!-- default defender 선언, 별다른 defender 선언이 없으면 default defender를 사용해 필터링 한다. -->
    <default>
        <defender>xssPreventerDefender</defender>
    </default>

    <!-- global 필터링 룰 선언 -->
    <global>
        <!-- 모든 url에서 들어오는 globalParameter 파라메터는 필터링 되지 않으며 
                또한 globalPrefixParameter로 시작하는 파라메터도 필터링 되지 않는다. -->
        <params>
            <param name="content"               useDefender="false" />
            <param name="content_interest"      useDefender="false" />
            <param name="desc_collateral"       useDefender="false" />
            <param name="desc_commission"       useDefender="false" />
            <param name="desc_contact"          useDefender="false" />
            <param name="desc_etc"              useDefender="false" />
            <param name="desc_goods"            useDefender="false" />
            <param name="desc_inquiry"          useDefender="false" />
            <param name="desc_limit"            useDefender="false" />
            <param name="desc_loan"             useDefender="false" />
            <param name="desc_loan_cost"        useDefender="false" />
            <param name="desc_loan_period"      useDefender="false" />
            <param name="desc_loan_provide"     useDefender="false" />
            <param name="desc_overdue_interest" useDefender="false" />
            <param name="desc_papers"           useDefender="false" />
            <param name="desc_paymethod"        useDefender="false" />
            <param name="desc_prefer_yield"     useDefender="false" />
            <param name="desc_ratio"            useDefender="false" />
            <param name="desc_repayment_fee"    useDefender="false" />
            <param name="desc_repaymethod"      useDefender="false" />
            <param name="desc_term"             useDefender="false" />
            <param name="desc_trade_clause"     useDefender="false" />
            <param name="prefer_interest"       useDefender="false" />
        </params>
    </global>

